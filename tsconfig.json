{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "resolveJsonModule": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "typeRoots": [ "node_modules/@types", "./typings.d.ts" ],
        "types" : [ "node" ]
    },
    "include": [
        "./**/*"
    ]
}